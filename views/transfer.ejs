<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Transfer</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header><h1>Transfer Funds</h1></header>

  <main class="page">
    <div class="card">
      <% if (error) { %><p class="error"><%= error %></p><% } %>
      <p>Your balance: <strong><%= user.balance %></strong></p>

      <form method="POST" action="/transfer">
        <label>To (select recipient)</label>
        <select name="toAddress" required>
          <% recipients.forEach(r => { %>
            <option value="<%= r.address %>">
              <%= r.username %> — <%= r.email %> (Bal: <%= r.balance %>) — <%= r.country || "N/A" %>
            </option>
          <% }) %>
        </select>

        <label>Amount</label>
        <input name="amount" type="number" step="0.01" min="1" required>

        <label>Note (optional)</label>
        <input name="note" type="text" maxlength="200">

        <button type="submit">Send</button>
      </form>

      <p style="margin-top:12px;"><a href="/dashboard">Back to Dashboard</a></p>
    </div>
  </main>
</body>
</html>
